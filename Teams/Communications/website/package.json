    "url": "https://github.com/nylira/virgo/issues"
  },
  "homepage": "https://github.com/nylira/virgo#readme",
  "devDependencies": {
    "@vuepress/plugin-blog": "^1.9.2",
    "@vuepress/plugin-google-analytics": "^1.5.0",
    "copyfiles": "^2.1.1",
    "npx": "^10.2.0",
    "vuepress": "^1.5.0"
  },
  "dependencies": {
    "@cosmos-ui/vue": "^0.23.0",
    "date-fns": "^2.9.0",
